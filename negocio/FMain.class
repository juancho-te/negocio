PUBLIC SUB TabStrip1_Click()
          DIM clave2 AS Integer = 1
          DIM hResult AS Result
          Columnstockvigente.Columns.Count = 7
          Columnstockvigente.Columns[0].Text = "Codigo"
          Columnstockvigente.Columns[1].Text = "Descripcion"
